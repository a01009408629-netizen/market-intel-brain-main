# Hybrid Mode Environment Variables - Low Resource Configuration
# Copy this file to .env for hybrid mode operation

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Disable encryption for hybrid mode (no master key required)
ENABLE_ENCRYPTION=false
ENABLE_AUDIT_LOGGING=false
ENABLE_ZERO_TRUST=false
ENABLE_OBSERVABILITY=false

# ===========================================
# ENCRYPTION SETTINGS
# ===========================================
ENCRYPTION_KEY=dummy_key_for_hybrid_mode

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
SERVICE_ID=market-intel-brain-hybrid
SERVICE_NAMESPACE=hybrid
TRUSTED_SERVICES=ingestion,ai,api

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# APPLICATION SETTINGS
# ===========================================
MODE=HYBRID
LOG_LEVEL=INFO
MAX_WORKERS=1

# ===========================================
# API PROVIDER CONFIGURATION
# ===========================================
# Mock mode - no real API keys required
BINANCE_API_KEY=dummy_key
BINANCE_API_SECRET=dummy_secret
FINNHUB_API_KEY=dummy_key
ALPHA_VANTAGE_API_KEY=dummy_key
NEWSAPI_API_KEY=dummy_key

# ===========================================
# INGESTION ENGINE CONFIGURATION
# ===========================================
INGESTION_MAX_WORKERS=10
INGESTION_QUEUE_SIZE=100
INGESTION_BATCH_SIZE=10
INGESTION_FLUSH_INTERVAL=1.0
INGESTION_P95_LATENCY_TARGET_MS=200.0
INGESTION_THROUGHPUT_TARGET=100
INGESTION_GLOBAL_CONNECTION_LIMIT=50
INGESTION_KEEPALIVE_TIMEOUT=30.0
INGESTION_CONNECTION_CLEANUP_INTERVAL=300.0
INGESTION_ENABLE_METRICS=true
INGESTION_METRICS_INTERVAL=60.0
INGESTION_LOG_LEVEL=INFO
INGESTION_GLOBAL_CIRCUIT_TIMEOUT=300.0
INGESTION_FAILURE_THRESHOLD_PERCENTAGE=0.1

# ===========================================
# HYBRID MODE SPECIFIC
# ===========================================
HYBRID_MODE=true
HYBRID_LOW_RESOURCE=true
HYBRID_MOCK_ENABLED=true
HYBRID_REDIS_FALLBACK=true
